@model video_rental_store.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Value.DayOfWeek, @Model.ReleaseDate.Value.Month, @Model.ReleaseDate.Value.Day, @Model.ReleaseDate.Value.Year</li>
    <li>Added Date: @Model.AddedDate.Value.DayOfWeek, @Model.AddedDate.Value.Month, @Model.AddedDate.Value.Day, @Model.AddedDate.Value.Year</li>
    <li>Number in Stack: @Model.numberInStock</li>

</ul>

